# Database Configuration
DB_DIALECT=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mydb
DB_USER=postgres
DB_PASSWORD=password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
ACCESS_TOKEN_EXPIRE=30d
REFRESH_TOKEN_EXPIRE=90d

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Email Settings
EMAIL_DEBUG_ENABLED=false
EMAIL_EXCLUDE_DOMAINS=tempmail*,guerrillamail.com,10minutemail.com

# Firebase Configuration
FIREBASE_CONFIG=./firebase-credentials.json

# Verification Code Settings
VERIFICATION_CODE_EXPIRE_SECONDS=900
VERIFICATION_CODE_DEBUG_CODE=123456
VERIFICATION_CODE_TESTERS_EMAILS=google_tester*,test@example.com
VERIFICATION_CODE_TESTERS_CODE=789654

# Security Settings
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Application
NODE_ENV=development
PORT=3000
TEMPLATES_DIR=./templates

# Project Settings (optional - for multi-project support)
# PROJECT_MODEL=Project
# PROJECT_MEMBER_MODEL=ProjectMember
